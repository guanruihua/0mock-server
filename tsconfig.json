{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./lib",
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "alwaysStrict": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    // "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    // "importHelpers": true,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "./node_modules/**/*.d.ts",
    "./typings/*.d.ts",
    "./src/**/*",
  ],
  "exclude": [
    // "./src/test",
    // "*.config.ts",
    "**/*/__test__/*",
    "**/*/__test__/",
    "**/*/md.ts",
    "**/*/*.md"
    // "*.spec.ts"
  ]
}
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "declaration": true,
    // "declarationDir": "./src/**/*"
  },
  "include": [
    "./src/**/*",
    "./src/type.d.ts"
  ],
  "exclude": [
    "./src/test",
    "*.spec.ts"
  ]
}
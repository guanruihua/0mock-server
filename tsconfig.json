{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib",
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "declaration": true,
    // "declarationDir": "./src/**/*"
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./src/test",
    "*.config.ts",
    "**/*/__test__/*",
    "**/*/__test__/",
    "**/*/md.ts",
    "**/*/*.md"
    // "*.spec.ts"
  ]
}